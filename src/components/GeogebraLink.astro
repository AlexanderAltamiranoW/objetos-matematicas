---
interface Props {
  titulo?: string;
  texto?: string;
  href?: string;
}
import GeogebraIcon from "@/components/GeogebraIcon.astro";
const { titulo, texto, href } = Astro.props as Props;
import { Icon } from "astro-icon/components";
---

<div
  class="bg-orange-400 my-5 px-5 py-3 rounded-xl max-w-screen-md mx-auto transition duration-300 ease-in-out hover:scale-105"
>
  <div class="flex items-center">
    <div class="w-2/3 px-1">
      <h4 class="!text-darkblue !text-3xl !md:text-4xl !font-bold">
        {titulo}
      </h4>
      <a class="flex items-center" href={href} target="_blank">
        <div class="text-slate-800 group relative w-max">
          <span>{texto}</span>
          <span class="absolute -bottom-1 left-0 w-0 transition-all h-1 bg-blue group-hover:w-full" ></span>
        </div>
        <Icon
          class="inline size-7 text-slate-800"
          name="bi:box-arrow-in-right"
        />
      </a>
    </div>
    <div class="w-1/3 flex justify-center">
      <a href={href} target="_blank"><GeogebraIcon class="size-44" /> </a>
    </div>
  </div>
</div>
