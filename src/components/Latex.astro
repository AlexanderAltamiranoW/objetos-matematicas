---
import katex from "katex";
const { inline, formula = "" } = Astro.props as Props;

const html = katex.renderToString(formula, { throwOnError: false });

interface Props {
  inline?: boolean;
  formula?: string;
}

---

<span
  class={`
      ${inline ? "inline-block" : "block"}
    `}
  set:html={html}
/>